{# Le form_start g√©n√®re la balise <form> #}
{{ form_start(form) }}

    <div class="row">
        {# Nom de la cat√©gorie #}
        <div class="col-12 mb-3">
            {{ form_label(form.nom, 'Nom de la cat√©gorie', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Ex: Concerts, Sport, Gastronomie...'}}) }}
            <div class="text-danger small">{{ form_errors(form.nom) }}</div>
        </div>

        {# Ic√¥ne (Emoji) #}
        <div class="col-md-6 mb-3">
            {{ form_label(form.icone, 'Ic√¥ne (Emoji)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.icone, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Ex: üé∏'}}) }}
            <div class="form-text small">Utilisez un emoji (Win + . ou Ctrl + Cmd + Espace).</div>
        </div>

        {# Couleur (M√©lange : Design Main + Ta logique Texte) #}
        <div class="col-md-6 mb-3">
            {{ form_label(form.couleur, 'Couleur (Hexad√©cimal)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {# On utilise ta logique de champ texte pour coller le code #}
            {{ form_widget(form.couleur, {
                'attr': {
                    'class': 'form-control rounded-3', 
                    'placeholder': '#FF0000', 
                    'maxlength': 7
                }
            }) }}
             <div class="form-text small">Code couleur hexa (ex: #d63031).</div>
        </div>

        {# Bouton de validation (Style du main conserv√©) #}
        <div class="col-12 mt-3">
            <button class="btn btn-primary w-100 py-2 shadow-sm rounded-pill fw-bold">
                <i class="fas fa-save me-2"></i>{{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>

{{ form_end(form) }}