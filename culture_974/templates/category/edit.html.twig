{% extends 'base.html.twig' %}

{% block title %}Modifier Catégorie - Culture 974{% endblock %}

{# On applique le thème Bootstrap pour que le formulaire soit beau #}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {# Lien retour corrigé #}
            <div class="mb-4">
                <a href="{{ path('app_categories') }}" class="text-decoration-none text-muted">
                    <i class="fas fa-arrow-left me-2"></i>Retour aux catégories
                </a>
            </div>

            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white p-4 border-bottom">
                    <h1 class="h4 fw-bold mb-0 text-dark">Modifier la catégorie</h1>
                </div>

                <div class="card-body p-4">
                    {{ include('category/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}
                </div>

                <div class="card-footer bg-light p-4 d-flex justify-content-end">
                    {# On garde le bouton supprimer proprement #}
                    {{ include('category/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}