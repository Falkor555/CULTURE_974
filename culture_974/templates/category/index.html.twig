{% extends 'base.html.twig' %}

{% block title %}Nos Catégories - Culture 974{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Explorer par catégorie</h1>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_category_new') }}" class="btn btn-primary shadow-sm rounded-pill">
                <i class="fas fa-plus me-1"></i> Ajouter
            </a>
        {% endif %}
    </div>

    <div class="row">
        {% for category in categories %}
            <div class="col-md-3 mb-4">
                <div class="position-relative h-100">

                    {# Bouton modifier flottant (uniquement si ROLE_USER) #}
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}"
                           class="btn btn-light btn-sm shadow-sm position-absolute top-0 end-0 m-2 rounded-circle border"
                           style="z-index: 10; width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;"
                           title="Modifier">
                            <i class="fas fa-pencil-alt text-warning" style="font-size: 0.8rem;"></i>
                        </a>
                    {% endif %}

                    <a href="{{ path('app_category_events', {'id': category.id}) }}" class="text-decoration-none h-100 d-block">
                        <div class="card h-100 shadow-sm border-0 hover-effect overflow-hidden">
                            <div class="card-body text-center py-4">
                                <div class="display-4 mb-3">{{ category.icone }}</div>
                                <h5 class="card-title text-dark fw-bold">{{ category.nom }}</h5>

                                <p class="text-muted small mb-0">
                                    <span class="badge rounded-pill bg-light text-dark border-0 px-3">
                                        {{ category.events|length }} événements
                                    </span>
                                </p>
                            </div>
                            {# Bandeau couleur #}
                            <div style="background-color: {{ category.couleur }}; height: 6px; width: 100%;"></div>
                        </div>
                    </a>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="alert alert-light text-center">Aucune catégorie trouvée.</p>
            </div>
        {% endfor %}
    </div>

    <style>
        .hover-effect {
            transition: all 0.3s ease;
        }
        .hover-effect:hover {
            transform: translateY(-8px);
            box-shadow: 0 1rem 2rem rgba(0,0,0,0.1)!important;
        }
        /* Pour que le bouton modifier ne bouge pas au survol si on veut un look stable */
        .position-relative:hover .btn-light {
            background-color: #fff;
            transform: scale(1.1);
        }
    </style>
{% endblock %}