{% extends 'base.html.twig' %}

{% block title %}Nouvelle Catégorie{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h1 class="h3 mb-0">Créer une nouvelle catégorie</h1>
                </div>
                <div class="card-body">
                    {{ include('category/_form.html.twig', {'button_label': 'Créer la catégorie'}) }}
                </div>
                <div class="card-footer bg-light">
                    {# CORRECTION ROUTE : app_categories au lieu de app_category_index #}
                    <a href="{{ path('app_categories') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="fa-solid fa-arrow-left me-1"></i> Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}