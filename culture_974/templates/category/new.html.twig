{% extends 'base.html.twig' %}

{% block title %}Nouvelle Catégorie - Culture 974{% endblock %}

{# On applique le thème Bootstrap pour le formulaire #}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {# CORRECTION : app_categories au lieu de app_category_index #}
            <div class="mb-4">
                <a href="{{ path('app_categories') }}" class="text-decoration-none text-muted">
                    <i class="fas fa-arrow-left me-2"></i>Retour aux catégories
                </a>
            </div>

            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                {# Header avec icône #}
                <div class="card-header bg-white p-4 border-bottom">
                    <div class="d-flex align-items-center">
                        <div class="bg-light text-primary rounded-circle p-3 me-3">
                            <i class="fas fa-folder-plus fa-lg"></i>
                        </div>
                        <div>
                            <h1 class="h4 fw-bold mb-0 text-dark">Créer une catégorie</h1>
                            <p class="text-muted mb-0 small">Ajoutez un nouveau thème pour classer les événements.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">

                    {{ include('category/_form.html.twig', {'button_label': 'Créer la catégorie'}) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}