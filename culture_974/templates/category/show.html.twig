{% extends 'base.html.twig' %}

{% block title %}Détail Catégorie{% endblock %}

{% block body %}
    <h1>Détail de la catégorie</h1>

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <span class="display-4 me-3">{{ category.icone }}</span>
                <div>
                    <h2 class="mb-0">{{ category.nom }}</h2>
                    <span class="badge" style="background-color: {{ category.couleur }}">Couleur : {{ category.couleur }}</span>
                </div>
            </div>
            
            <table class="table">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre d'événements</th>
                        <td>{{ category.events|length }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-white d-flex justify-content-between">
            {# CORRECTION ROUTE : Retour vers la liste Admin/Visiteur #}
            <a href="{{ path('app_categories') }}" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left"></i> Retour
            </a>

            <div>
                {# Bouton Modifier #}
                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning me-2">
                    <i class="fa-solid fa-pen"></i> Modifier
                </a>
                
                {# Bouton Supprimer #}
                <div class="d-inline-block">
                     {{ include('category/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}