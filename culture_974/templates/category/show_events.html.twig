{% extends 'base.html.twig' %}

{% block title %}Événements : {{ category.nom }}{% endblock %}

{% block body %}
<div class="container py-4">
    {# Fil d'ariane pour le retour #}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_categories') }}" class="text-decoration-none">Catégories</a></li>
            <li class="breadcrumb-item active">{{ category.nom }}</li>
        </ol>
    </nav>

    <div class="d-flex align-items-center mb-5">
        <div class="display-4 me-3">{{ category.icone }}</div>
        <div>
            <h1 class="fw-bold mb-0">{{ category.nom }}</h1>
            <p class="text-muted mb-0">{{ category.events|length }} événements trouvés à La Réunion</p>
        </div>
        <div class="ms-auto" style="width: 100px; height: 10px; border-radius: 5px; background-color: {{ category.couleur }};"></div>
    </div>

    <div class="row">
        {% for event in events %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0 hover-effect">
                    {% if event.image %}
                        <img src="{{ event.image }}" class="card-img-top" alt="{{ event.titre }}" style="height: 200px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title fw-bold">{{ event.titre }}</h5>
                        <p class="text-muted small"><i class="fas fa-map-marker-alt text-danger"></i> {{ event.lieu }}</p>
                        <p class="card-text text-truncate">{{ event.description }}</p>
                    </div>
                    <div class="card-footer bg-white border-0 pb-3">
                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-outline-info w-100 rounded-pill">Voir l'événement</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center py-5 shadow-sm bg-white rounded-4">
                <i class="fas fa-calendar-day fa-3x text-muted mb-3"></i>
                <p class="lead">Aucun événement n'est encore programmé dans cette catégorie.</p>
                <a href="{{ path('app_categories') }}" class="btn btn-primary">Découvrir d'autres catégories</a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}