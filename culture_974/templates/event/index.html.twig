{% extends 'base.html.twig' %}

{% block title %}Evenements Culture 974{% endblock %}
{% block stylesheets %}
 <link rel="stylesheet" href="{{ asset('assets/css/style.css')}}"/>{% endblock %}


{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Bienvenue chez Culture 974</h1>

        {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_event_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Créer un Event
        </a>
        {% endif %}

    </div>

    <div class="row">
        {% for event in events %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    {# Affichage de l'image #}
                    {% if event.image %}
                        <img src="{{ event.image }}" class="card-img-top" alt="{{ event.titre }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <img src="https://via.placeholder.com/400x200?text=Pas+d'image" class="card-img-top" alt="Image par défaut">
                    {% endif %}

                    <div class="card-body">
                        <h5 class="card-title text-primary">{{ event.titre }}</h5>

                        {# Badge pour le lieu #}
                        <p class="text-muted small">
                            <i class="fas fa-map-marker-alt"></i> {{ event.lieu }}
                        </p>

                        <p class="card-text text-truncate">{{ event.description }}</p>

                        <p class="card-text">
                            <strong><i class="far fa-calendar-alt"></i></strong>
                            {{ event.date ? event.date|date('d/m/Y H:i') : 'Date non fixée' }}
                        </p>
                    </div>

<a href="{{ path('app_event_inscription', {'id': event.id}) }}" class="btn btn-primary w-100 rounded-pill">
    <i class="fas fa-ticket-alt me-2"></i>S'inscrire
</a>

                    <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between">

                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-outline-info btn-sm">Détails</a>

                        {% if is_granted('ROLE_USER') %}
                            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-outline-warning btn-sm">Modifier</a>
                        {% endif %}
                    </div>

                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="alert alert-info text-center">Aucun événement n'est prévu pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
